<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/playBtn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="154dp"
        android:onClick="changeView"
        android:width="150dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify"
        android:id="@+id/modBtn"
        android:onClick="changeView"
        android:width="150dp"
        android:layout_below="@+id/playBtn"
        android:layout_alignEnd="@+id/titleTxt"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ranking"
        android:id="@+id/rankBtn"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/modBtn"
        android:layout_alignStart="@+id/modBtn"
        android:onClick="changeView"
        android:width="150dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:id="@+id/helpBtn"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/rankBtn"
        android:layout_centerHorizontal="true"
        android:onClick="changeView"
        android:width="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUIZ&apos;D"
        android:id="@+id/titleTxt"
        android:layout_marginTop="53dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp" />

</RelativeLayout>
