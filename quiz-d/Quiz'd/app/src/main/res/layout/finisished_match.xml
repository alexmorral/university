<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ryblade.quizd.PlayActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations!"
        android:id="@+id/wordNumLabel"
        android:layout_marginTop="44dp"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your score has been"
        android:id="@+id/textView6"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/wordNumLabel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/scoreLabel"
        android:layout_marginTop="23dp"
        android:gravity="center_horizontal"
        android:textSize="40dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameField"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Result"
        android:id="@+id/saveBtn"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/nameField"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/exitBtn"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/saveBtn"
        android:layout_alignStart="@+id/saveBtn"
        android:layout_alignEnd="@+id/saveBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce your name"
        android:id="@+id/textView8"
        android:layout_below="@+id/scoreLabel"
        android:layout_alignStart="@+id/nameField"
        android:layout_marginTop="33dp" />

</RelativeLayout>

