<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ryblade.quizd.RankActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 Best Scores"
        android:id="@+id/textView7"
        android:layout_marginTop="33dp"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Name - Score"
        android:id="@+id/textView10"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name1 - 100"
        android:id="@+id/name1Label"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="47dp"
        android:layout_alignEnd="@+id/textView10"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="1."
        android:id="@+id/textView14"
        android:gravity="center_horizontal"
        android:layout_marginEnd="18dp"
        android:layout_alignTop="@+id/name1Label"
        android:layout_toStartOf="@+id/name1Label" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="2."
        android:id="@+id/textView13"
        android:gravity="center_horizontal"
        android:layout_below="@+id/name1Label"
        android:layout_alignStart="@+id/textView14"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name2 - 100"
        android:id="@+id/name2Label"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignEnd="@+id/name1Label"
        android:layout_alignStart="@+id/name1Label"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="3."
        android:id="@+id/textView17"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name - 100"
        android:id="@+id/name3Label"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignEnd="@+id/name2Label"
        android:layout_alignStart="@+id/name2Label"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4."
        android:id="@+id/textView20"
        android:layout_below="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:layout_marginTop="32dp"
        android:layout_alignEnd="@+id/textView17"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name - 100"
        android:id="@+id/name4Label"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignStart="@+id/name3Label"
        android:layout_alignEnd="@+id/name3Label"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5."
        android:id="@+id/textView23"
        android:layout_below="@+id/textView20"
        android:layout_alignStart="@+id/textView20"
        android:layout_marginTop="32dp"
        android:layout_alignEnd="@+id/textView20"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name - 100"
        android:id="@+id/name5Label"
        android:layout_alignBottom="@+id/textView23"
        android:layout_alignEnd="@+id/name4Label"
        android:layout_alignStart="@+id/name4Label"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/exitBtn"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/name5Label"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

